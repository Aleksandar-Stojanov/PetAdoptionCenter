@{
}
@model PetAdoptionCenter.Domain.Domain_Models.DTO.RequestForAdoptionDTO


<h1>Request Adoption</h1>

<div>
    <h4>Requesting adoption for this pet</h4>
    <hr />
    <h3>Name: @Model.Pet.Name</h3>
    <img src="@Model.Pet.Image" alt="Card image cap"
         style="height: 200px;">
         <br />
         <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateRequest">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserId" class="control-label">User</label>
                    @Html.DropDownListFor(x => Model.UserId, new SelectList(Model.People, "Id", "FullName"), new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="PetId" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="CenterId" class="form-control" />
                </div>


                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>
<div>
    <a asp-action="Index">Back to List</a>
</div>